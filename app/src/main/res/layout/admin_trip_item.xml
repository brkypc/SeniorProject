<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/nameSurnameItem"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="İsim Soyisim"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/billPriceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiş Tutarı"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/nameSurnameItem"
        app:layout_constraintEnd_toStartOf="@+id/calculatedPriceItem"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/calculatedPriceItem"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Hesaplanan Tutar"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/billPriceItem"
        app:layout_constraintEnd_toStartOf="@+id/billStatusItem"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/billStatusItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durum"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/billStatusIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_approved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>