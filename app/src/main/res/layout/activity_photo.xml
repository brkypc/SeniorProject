<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="#f2f2f2"
    tools:context=".Activities.PhotoActivity">


    <TextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Seyahat Raporunuz"
        android:textStyle="bold"
        android:fontFamily="@font/muli_black"
        android:textSize="20pt"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_marginTop="25dp"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:fontFamily="@font/muli_black"
            android:text="Gidilen Mesafe:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="2 km"
            android:textStyle="bold"
            android:fontFamily="@font/muli_black"
            android:textColor="@color/black"
            android:textSize="7pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="7pt"
           android:layout_marginTop="10dp"
            android:fontFamily="@font/muli_black"
            android:text="Hesaplanan Tutar:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distanceText"
            app:layout_constraintBottom_toTopOf="@+id/ocrText"/>

        <TextView
            android:id="@+id/amount"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="₺45"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/muli_black"
            android:textColor="@color/black"
            android:textSize="7pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distanceText"
            app:layout_constraintBottom_toTopOf="@+id/ocrAmount"/>

        <TextView
            android:id="@+id/ocrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:fontFamily="@font/muli_black"
            android:layout_marginTop="10dp"
            android:text="Fiş Tutarı:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountText"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/ocrAmount"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="₺344.32"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli_black"
            android:textColor="@color/black"
            android:textSize="7pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="Seyahati Kaydet"
        android:fontFamily="@font/muli_black"
        android:textAllCaps="false"
        android:textSize="9pt"
        android:textColor="@color/white"
        android:background="@drawable/receipt_btn"/>

</LinearLayout>